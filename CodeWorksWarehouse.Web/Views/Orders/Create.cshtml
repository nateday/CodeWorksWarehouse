@model CodeWorksWarehouse.Common.Entities.Order

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateOrder</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>

    <h4>Order</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form name="newProduct" asp-action="create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label">Product</label>
                    <input name="ProductId" asp-for="ProductId" class="form-control" />
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input name="RemoveStock" type="checkbox" asp-for="RemoveStock" /> @Html.DisplayNameFor(model => model.RemoveStock)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Stock" class="control-label">Stock</label>
                    <input name="Stock" asp-for="Stock" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
